<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <!-- Actions (must be before menus) -->
  <record id="action_student_students" model="ir.actions.act_window">
    <field name="name">Students</field>
    <field name="res_model">student.student</field>
    <field name="view_mode">list,form</field>
  </record>

  <record id="action_student_courses" model="ir.actions.act_window">
    <field name="name">Courses</field>
    <field name="res_model">student.course</field>
    <field name="view_mode">list,form</field>
  </record>

  <!-- Menus -->
  <menuitem id="menu_student_mgmt_root"
            name="Student Management"
            sequence="10"
            action="action_student_students"/>

  <menuitem id="menu_students" name="Students"
            parent="menu_student_mgmt_root" sequence="10"
            action="action_student_students"/>

  <menuitem id="menu_courses" name="Courses"
            parent="menu_student_mgmt_root" sequence="20"
            action="action_student_courses"/>

  <menuitem id="menu_reports" name="Reports"
            parent="menu_student_mgmt_root" sequence="30"/>
</odoo>
